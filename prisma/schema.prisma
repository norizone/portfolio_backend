generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Admin {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updateAt       DateTime @updatedAt
  email          String   @unique
  hashedPassword String
}

model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updateAt       DateTime @updatedAt
  email          String   @unique
  hashedPassword String
  permission     Int      @default(1)
}

model Tool {
  id        Int      @id @default(autoincrement())
  order     Int      @unique @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  toolName  String   @unique
  works     Work[]   @relation("WorkTools")
}

model Work {
  id            Int      @id @default(autoincrement())
  createdAt     DateTime @default(now())
  updateAt      DateTime @updatedAt
  order         Int      @unique @default(autoincrement())
  permission    Int      @default(3)
  publication   Int      @default(0)
  title         String
  titleEn       String
  archiveImg    String
  useTools      Tool[]   @relation("WorkTools")
  comment       String?
  url           String?
  gitUrl        String?
  role          String
  singleImgMain String
  singleImgSub  String
  singleImgSub2 String?
}
