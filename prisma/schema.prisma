// ユーザー権限
enum USER_ROLE {
  LIMIT_VIEWING
  ALL_VIEWING
  ADMIN
}

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  updateAt       DateTime  @updatedAt
  email          String    @unique
  hashedPassword String
  permission     USER_ROLE
}

model Tool {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updateAt  DateTime @updatedAt
  toolName  String
  works     Work[]   @relation("WorkTools")
}

model Work {
  id             Int       @id @default(autoincrement())
  createdAt      DateTime  @default(now())
  updateAt       DateTime  @updatedAt
  order          Int       @unique
  viewPermission USER_ROLE //観覧権限 TODO: 未ログインでも見れるように権限を増やす
  title          String
  titleEn        String
  archiveImg     String
  useTools       Tool[]    @relation("WorkTools")
  comment        String?
  url            String?
  islink         Boolean   @default(false)
  gitUrl         String?
  role           String
  singleImgMain  String
  singleImgSub   String
  singleImgSub2  String?
}
